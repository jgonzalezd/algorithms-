    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Typescript",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/code-challenges/LT088-merged-sorted-array/solution.ts",
            "console":"integratedTerminal",
            "runtimeArgs": ["-r", "ts-node/register", "-r", "tsconfig-paths/register"],
            "outFiles": [
                "${workspaceFolder}/dist/**/*.js"
            ]
        },
        {
            "type": "python",
            "request": "launch",
            "name": "Debug Python Solution",
            "program": "${workspaceFolder}/code-challenges/LT088-merged-sorted-array/solution.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/code-challenges/LT088-merged-sorted-array",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/lib"
            },
            "justMyCode": false
        }
    ]
}